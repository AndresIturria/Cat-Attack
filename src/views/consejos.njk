{% extends "layoutNav.njk" %}

{% block head %}
    <title>Consejos</title>
    <link rel="stylesheet" href="/stylesheets/consejos.css">
{% endblock %}

{% block nav %}
    <li class="nav-item">
        <a class="nav-link" href="/dashboard">Inicio<span class="sr-only"></span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/adopcion">Adopción</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="#">Consejos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/catsitting">Cat-Sitters</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/miperfil">Mi Perfil</a>
    </li>

    {% if user.username != "guest" %}
        <li class="nav-item">
            <a class="nav-link" href="/chat">Chat</a>
        </li>
    {% endif %}

    {% if user.isAdmin == true %}
        <li class="nav-item">
            <a class="nav-link" style="color: #FF0000" href="/incidencias">Incidencias</a>
        </li>
    {% endif %}

    <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
    </li>



{% endblock %}

{% block content %}

    {% if user.isAdmin %}
        <a class="btn btn-outline-dark" href="/consejo_form">Publicar un consejo</a>
    {% endif %}


    {% if consejos|length < 1 %}
    <h3>No hay consejos en estos momentos.</h3>
{% else %}
        {% for consejo in consejos %}

            <div class ="container">
                <div class="consejos">
                    <img class="photo" src="{{ consejo.photo }}" alt="Sample photo">
                    <div class="consejos-body">
                        <h3 class="consejos-heading">{{ consejo.title }}</h3>
                        <div class="consejos-description">{{ consejo.description }}</div>
                        <a href="/consejos/{{ consejo._id }}"> Leer más </a>
                    </div>
                </div>
            </div>

    {% endfor %}


    {% endif %}


    {% endblock %}

    {% block footer %} {% endblock %}