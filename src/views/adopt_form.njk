{% extends "layoutNav.njk" %}

{% block head %}
    <title>Formulario</title>
    <link rel="stylesheet" href="/stylesheets/adopcion.css">
{% endblock %}

{% block nav %}
    <li class="nav-item">
        <a class="nav-link" href="/dashboard">Inicio<span class="sr-only"></span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/adopcion">Adopción</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link" href="/consejos">Consejos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/catsitting">Cat-Sitters</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/miperfil">Mi Perfil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/logout">Logout</a>
    </li>

{% endblock %}

{% block content %}

<div class="container">

    <form class="adoptform" action="" method="post"  id="adopt_form">
            {% block title %} <legend><center><h2><b>Dar un gato en adopción</b></h2></center></legend><br>  {% endblock %}

            <p><div class="form-group">
                <label for="titulo">Nombre del gato</label>
                <input type="text" required="required" id="name" name="titulo" placeholder="Introduce el nombre de tu gato" maxlength="15">
            </div>
            </p>

            <p><div class="form-group">
                <label for="descripcion">Detalles</label>
                <textarea id="descripcion" required="required" name="descripcion" placeholder="¡Cuéntanos sobre tu gato!" style="height:80px" maxlength="200"></textarea>
            </div>
            </p>

            <div class="form-group">
                <label class="col-md-4 control-label">Selecciona la raza</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="breed" id="breed" class="form-control selectpicker" required="required">
                            <option value="">Escoge una raza</option>
                            <option>Bengalí</option>
                            <option>British Shorthair</option>
                            <option>Bosque de Noruega</option>
                            <option>Común europeo</option>
                            <option>Curl Americano</option>
                            <option>Esfinge</option>
                            <option>Himalayo</option>
                            <option>Maine Coon</option>
                            <option>Munchkin</option>
                            <option value="Persa" selected>Persa</option>
                            <option>Ragamuffin</option>
                            <option>Ragdoll</option>
                            <option>Siamés</option>
                            <option>Siberiano</option>
                            <option>Desconocido/No Listado</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Edad</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input  name="plazas_evento" placeholder="Introduce la edad de tu gato" class="form-control">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">Selecciona el sexo del gato</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="sex" id="sex" class="form-control selectpicker" required="required">
                            <option value="">Escoge el sexo</option>
                            <option>Macho</option>
                            <option>Hembra</option>
                            <option>Desconocido</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 control-label">¿Está esterilizado?</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="neutered" id="neutered" class="form-control selectpicker" required="required">
                            <option value="">Selecciona una opción</option>
                            <option>Sí</option>
                            <option>No</option>
                            <option>Desconocido</option>
                        </select>
                    </div>
                </div>
            </div>


            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-primary is-small">Poner en adopción </button>
                </div>
            </div>
    </form>
</div>

{% endblock %}

    {% block footer %} {% endblock %}