{% block head %}
    <title>Formulario</title>
    <link rel="stylesheet" href="/stylesheets/adopt_form.css">
{% endblock %}

{% block content %}

    <form class="adoptform" method="post" action="/post-adopt" id="adopt_form">
        <div class='signup-container'>
            <div class='left-container'>
                <h1>
                    CAT-ATTACK!
                </h1>
                <div class='cat'>
                    <img src="/img/cat-form.png">
                </div>
            </div>
            <div class='right-container'>
                <header>
                    <h1>¡Te ayudamos a encontrarle un hogar!</h1>
                    <div class='set'>
                        <div class='name'>
                            <label for='name'>Nombre</label>
                            <input id='name' placeholder="Nombre del gato" type='text'>
                        </div>
                        <div class='photo'>
                            <button id='pets-upload'>
                                <i class='fas fa-camera-retro'></i>
                            </button>
                            <label for='pets-upload'>Sube una foto</label>
                        </div>
                    </div>
                    <div class='set'>
                        <div class='breed'>
                            <label for='breed'>Raza</label>
                            <input id='breed' placeholder="Raza del gato" type='text'>
                        </div>
                        <div class='age'>
                            <label for='age'>Edad</label>
                            <input id='age' placeholder='Introduce su edad' type='text'>
                        </div>
                    </div>
                    <div class='set'>
                        <div class='sex'>
                            <label for='sex-female'>Sexo</label>
                            <div class='radio-container'>
                                <input checked='' id='sex-female' name='sex' type='radio' value='female'>
                                <label for='sex-female'>Hembra</label>
                                <input id='sex-male' name='sex' type='radio' value='male'>
                                <label for='sex-male'>Macho</label>
                            </div>
                        </div>
                        <div class='neutered'>
                            <label for='neutered'>Esterilizado</label>
                            <div class='radio-container'>
                                <input checked='' id='yesneutered' name='yesneutered' type='radio' value='yesneutered'>
                                <label for='yesneutered'>Sí</label>
                                <input id='notneutered' name='notneutered' type='radio' value='notneutered'>
                                <label for='notneutered'>No</label>
                            </div>
                        </div>
                    </div>
                    <div class='weight'>
                        <label for='weight-0-1'>Peso</label>
                        <div class='radio-container'>
                            <input checked='' id='weight-0-1' name='weight' type='radio' value='0-1'>
                            <label for='weight-0-1'>0-1kg</label>
                            <input id='weight-1-3' name='weight' type='radio' value='1-3'>
                            <label for='weight-1-3'>1kg-3kg</label>
                            <input id='weight-3-6' name='weight' type='radio' value='3-6'>
                            <label for='weight-3-6'>3kg-6kg</label>
                            <input id='weight-6-plus' name='weight' type='radio' value='6+'>
                            <label for='weight-6-plus'>6kg+</label>
                        </div>
                    </div>
                </header>
                <footer>
                    <div class='set'>
                        <a class="btn btn-primary" href="/adopcion">Volver</a>
                        <input type="submit" value="Submit">
                    </div>
                </footer>
            </div>
        </div>
    </form>

{% endblock %}

    {% block footer %} {% endblock %}